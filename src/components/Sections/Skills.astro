---
import Section from "../Section.astro";
import { t } from "i18next";
const { skills } = Astro.props;
type skill = {
  name: string;
};
---

<Section title={t("Skills")}>
  <ul>
    {
      skills.map(({ name }: skill) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  .level {
    font-size: 0.7rem;
    color: rgba(0, 172, 188, 0.985);
  }
  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
